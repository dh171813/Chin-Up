<?xml version="1.0" encoding="utf-8"?>

<!-- Layout von ExerciseActivity -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="at.fhstp.chinup.ExerciseActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="@color/colorPrimaryDark"
            android:paddingTop="20dp"
            android:text="Heb den Kopf und schau dich um!\nBewege deinen Kopf auch nach links und rechts!\nLockere dadurch deine Nackenmuskulatur!"
            android:textAlignment="center"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="3"
        >
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Sieh dich fÃ¼r 1 Minute in deiner Umgebung um! Welche Details fallen dir auf? Was siehst du? \n Fertig?"
            android:textAlignment="center"
            />

        <Button
            android:id="@+id/buttonYes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6dd988"
            android:text="Ja"
            android:layout_margin="20dp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#FFA500"
            android:textSize="17dp"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:textColorLink="#FFA500"
            android:textColorHighlight="#CC7A00"
            android:text="@string/exercises"            />
    </LinearLayout>




</LinearLayout>
